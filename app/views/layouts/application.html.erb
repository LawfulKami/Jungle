<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/top_nav' %>
  <div class="container">
    <% if current_user %>
    Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout', class: "btn btn-danger" %>
  <% else %>
    <%= link_to 'Login', '/login', class: "btn btn-success" %> | <%= link_to 'Signup', '/signup', class: "btn btn-primary" %>
  <% end %>
  </div>

  <main class="container">
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
